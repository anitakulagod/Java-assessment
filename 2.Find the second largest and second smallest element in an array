import java.util.*;

public class SecondElements {
    public static void main(String[] args) {
        int[] arr = {10, 20, 3, 45, 99};

        Arrays.sort(arr);
        System.out.println("Second Smallest = " + arr[1]);
        System.out.println("Second Largest = " + arr[arr.length - 2]);
    }
}
